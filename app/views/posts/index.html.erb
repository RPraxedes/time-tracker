<div class="jumbotron">
    <h1 class="text-center">All Posts</h1>
</div>

<table class="table">
	<thead>
		<tr>
			<th>
				#
			</th>
			<th>
				Date
			</th>
			<th>
				User
			</th>
			<th>
				Rationale
			</th>
		</tr>
	</thead>
	<tbody>
    <% @posts.each do |post| %>
		<tr>
			<td>
				<%= post.id %>
			</td>
			<td>
				<%= post.date %>
			</td>
			<td>
				<%= post.user.last_name %>
			</td>
			<td>
				<%= truncate(post.rationale) %>
			</td>
		</tr>
    <% end %>
	</tbody>
</table>
